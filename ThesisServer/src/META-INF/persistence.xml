<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="ThesisServer">
		<class>tr.edu.metu.thesis.jpa.Device</class>
		<class>tr.edu.metu.thesis.jpa.Participant</class>
		<class>tr.edu.metu.thesis.jpa.ParticipantAnswer</class>
		<class>tr.edu.metu.thesis.jpa.ParticipantSensorRecord</class>
		<class>tr.edu.metu.thesis.jpa.Question</class>
		<class>tr.edu.metu.thesis.jpa.QuestionOption</class>
		<class>tr.edu.metu.thesis.jpa.Sensor</class>
		<class>tr.edu.metu.thesis.jpa.SurveyInstance</class>
		<class>tr.edu.metu.thesis.jpa.SurveyInstanceQuestion</class>
		<class>tr.edu.metu.thesis.jpa.SurveyTemplate</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/thesis_db" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="123456" />
			<property name="javax.persistence.jdbc.min " value="0" />
			<property name="javax.persistence.jdbc.max" value="200" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgresSQLDialect" />
		</properties>
	</persistence-unit>
</persistence>
